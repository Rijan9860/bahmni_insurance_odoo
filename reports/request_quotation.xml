<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <template id="request_for_quotation_inherit" inherit_id="purchase.report_purchasequotation_document">
            <xpath expr="//t[@t-call='web.external_layout']" position="replace">
                <t t-call="web.basic_layout">
                    <div class="page">
                        <div class="row">
                            <div class="text-center">
                                <div class="main-header">
                                    <h6>Government of Gandaki Province</h6>
                                    <h6>Ministry of Health</h6>
                                    <h6>Provincial Health Directorate</h6>
                                </div>
                                <div class="sub-header">
                                    <strong> 
                                        गण्डकी प्रदेश सरकार <br></br>
                                        सामाजिक बिकाश मन्त्रालय <br></br>
                                        स्वास्थ्य निर्देशनालय <br> </br>
                                        जिल्ला अस्पताल पर्बत <br> </br>
                                        माग फाराम
                                    </strong>
                                </div>
                            </div>
                        </div>
                        <t t-if="o.dest_address_id">
                            <t t-set="information_block">
                                <strong>Shipping address:</strong>
                                <div t-field="o.dest_address_id"
                                    t-options='{"widget": "contact", "fields": ["address", "name", "phone"], "no_marker": True, "phone_icons": True}' name="purchase_shipping_address"/>
                            </t>
                        </t>

                        <div class="oe_structure"/>

                        <h2 class="mt-4">Request for Quotation <span t-field="o.name"/></h2>

                        <table class="table table-sm mt-4">
                            <thead style="display: table-row-group">
                                <tr>
                                    <th name="th_description"><strong>Description</strong></th>
                                    <th name="th_expected_date" class="text-center"><strong>Expected Date</strong></th>
                                    <th name="th_quantity" class="text-end"><strong>Qty</strong></th>
                                </tr>
                            </thead>
                            <tbody>
                                <t t-foreach="o.order_line" t-as="order_line">
                                    <tr t-att-class="'bg-200 fw-bold o_line_section' if order_line.display_type == 'line_section' else 'fst-italic o_line_note' if order_line.display_type == 'line_note' else ''">
                                        <t t-if="not order_line.display_type">
                                            <td id="product">
                                                <span t-field="order_line.name"/>
                                            </td>
                                            <td class="text-center">
                                                <span t-field="order_line.date_planned"/>
                                            </td>
                                            <td class="text-end">
                                                <span t-field="order_line.product_qty"/>
                                                <span t-field="order_line.product_uom" groups="uom.group_uom"/>
                                            </td>
                                        </t>
                                        <t t-else="">
                                            <td colspan="99" id="section">
                                                <span t-field="order_line.name"/>
                                            </td>
                                        </t>
                                    </tr>
                                </t>
                            </tbody>
                        </table>
                        <p t-field="o.notes" class="mt-4"/>
                        <div class="oe_structure"/>
                    </div>
                    <div class="col-xs-6 col-6">
                        <table>
                            <tr> 
                                <th colspan="2"> माग गर्नेको दस्तखत:</th>
                            </tr> 
                            <tr> 
                                <td> नाम:</td>
                                <td> ...................</td>
                            </tr> 
                            <tr> 
                                <td> मिति :</td>
                                <td> ...................</td>
                            </tr> 
                            <tr> 
                                <td> प्रयोजन :</td>
                                <td> ...................</td>
                            </tr> 
                            <tr> 
                                <td> मिति  :</td>
                                <td> ...................</td>
                            </tr> 
                            <tr> 
                                <th colspan="2"> जिन्सी खातामा चढाउनेको दस्तखत :</th>
                            </tr> 
                            <tr> 
                                <th colspan="2"> </th>
                            </tr> 
                            <tr> 
                                <td> मिति:</td>
                                <td> ...................</td>
                            </tr> 
                        </table>
                    </div>
                    <div class="col-xs-6 col-6">
                        <table>
                            <tr> 
                                <th colspan="2">क) बजारबाट खरिद गरिदिनु:</th>
                            </tr> 
                            <tr> 
                                <th colspan="2">ख) मौज्दात बाट दिनु :</th>
                            </tr> 
                            <tr> 
                                <th colspan="2"> </th>
                            </tr> 
                            
                            <tr> 
                                <th colspan="2">आदेश दिनेको दस्तखत:</th>
                            </tr> 
                            <tr> 
                                <td> मिति :</td>
                                <td> ...................</td>
                            </tr> 
                            
                            <tr> 
                                <th colspan="2"> </th>
                            </tr> 
                            
                            <tr> 
                                <th colspan="2">मालसमान बुझिलिनेको दस्तखत:</th>
                            </tr> 
                            <tr> 
                                <td> मिति:</td>
                                <td> ...................</td>
                            </tr> 
                        </table>
                    </div>
                    <style>
                        @font-face {
                            font-family: 'Lohit Devanagari';
                            src: url('/usr/share/fonts/truetype/lohit-devanagari/Lohit-Devanagari.ttf') format('truetype');
                        }
                        .text-center {
                            text-align: center;
                        }
                        .main-header h6 {
                            font-weight: bold;
                        }
                        .sub-header p {
                            font-size: 14px;
                            font-weight:bold;
                            font-family: 'Lohit Devanagari';
                        }
                    </style>
                </t>
            </xpath>
        </template>
    </data>
</odoo>