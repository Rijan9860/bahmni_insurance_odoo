<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="payment_journal_mapping_form_view" model="ir.ui.view">
        <field name="name">Payment Journal Mapping</field>
        <field name="model">payment.journal.mapping</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="payment_type"/>
                        <field name="journal_ids"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <record id="payment_journal_mapping_tree_view" model="ir.ui.view">
        <field name="name">Payment Journal Mapping Tree View</field>
        <field name="model">payment.journal.mapping</field>
        <field name="arch" type="xml">
            <tree>
                <field name="payment_type"/>
                <field name="journal_ids"/>
            </tree>
        </field>
    </record>
    <record id="action_payment_journal_mapping" model="ir.actions.act_window">
        <field name="name">Payment Journal Mapping</field>
        <field name="res_model">payment.journal.mapping</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="payment_journal_mapping_tree_view"></field>
    </record>
    <menuitem id="menu_payment_journal_mapping" name="Payment Journal Mapping" sequence="11" parent="menu_emr_configuration" action="action_payment_journal_mapping"/>
</odoo>