<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="insurance_claim_form_view" model="ir.ui.view">
        <field name="name">Insurance Claim Form View</field>
        <field name="model">insurance.claim</field>
        <field name="arch" type="xml">
            <form string="Claims">
                <sheet>
                    <group> 
                        <group>
                            <field name="claim_code"/>
                            <field name="partner_id"/>
                            <field name="nhis_number"/>
                            <field name="nmc_number"/>
                            <field name="care_setting"/>
                            <field name="claim_uuid"/>
                        </group>
                        <group>
                            <field name="creation_date"/>
                            <field name="claims_manager"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Claim Items">
                            <field name="insurance_claim_line">
                                <tree editable="bottom">
                                    <field name="product_id"/>
                                    <field name="imis_product_code"/>
                                    <field name="quantity"/>
                                    <field name="unit_price"/>
                                    <field name="total"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Sale Orders">
                            <field name="sale_orders"/>
                        </page>
                        <page string="Attachments">
                            <field name="attachment_ids">
                                <tree editable="bottom">
                                    <field name="name"/>
                                    <field name="res_name"/>
                                    <field name="datas"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
    <record id="insurance_claim_tree_view" model="ir.ui.view">
        <field name="name">Insurance Claim Tree View</field>
        <field name="model">insurance.claim</field>
        <field name="arch" type="xml">
            <tree string="Claims">
                <field name="nhis_number"/>
                <field name="creation_date"/>
                <field name="partner_id"/>
                <field name="claims_manager"/>
                <field name="care_setting"/>
            </tree>
        </field>
    </record>
    <record id="action_claims" model="ir.actions.act_window">
        <field name="name">Claims</field>
        <field name="res_model">insurance.claim</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="insurance_claim_tree_view"></field>
    </record>
    <menuitem id="menu_claims" name="Claims" sequence="10" parent="menu_insurance_claims" action="action_claims"/>
</odoo>